{% extends '@App/layout.html.twig' %}

{% block stylesheets %}
    <script src="https://maps.google.com/maps/api/js?key=AIzaSyDlmgCqiyXtQ1E1K9TO07kbUWHgjisjHRE"></script>
{% endblock %}

{% block javascripts %}
    <script>
        var info_cities = [
            ['Sinaloa', 24.8008845,-107.4482077, 1],
            ['Coahuila', 27.264713, -102.040034, 2],
            ['Nuevo León', 25.556389, -99.713565, 3],
            ['Zacatecas', 23.393530, -102.963137, 4],
            ['San Luis Potosí', 22.405460, -100.283590, 5],
            ['Aguascalientes', 22.020206, -102.336994, 6],
            ['Jalisco', 20.365130, -103.791053, 7],
            ['Michoacán', 19.256907, -101.888898, 8],
            ['Guanajuato', 20.964784, -101.057172, 9],
            ['Querétaro', 20.884877, -99.821800, 10],
            ['Hidalgo', 20.555047, -98.971271, 11],
            ['CDMX', 19.371889, -99.139644, 12],
            ['Estado de México', 19.296360, -99.648381, 13],
            ['Guerrero', 17.741973, -100.039865, 14],
            ['Tlaxcala', 19.443269, -98.176678, 15],
            ['Puebla', 18.947660, -97.920976, 16],
            ['Veracruz', 19.412473, -96.688442, 17],
            ['Oaxaca', 17.042521, -96.470355, 18],
            ['Chiapas', 16.536580, -92.507879, 19]
        ];

        function initialize() {
            var mapAttr = {
                center: new google.maps.LatLng(24.237382, -102.723554),
                zoom: 5,
                mapTypeId: google.maps.MapTypeId.ROADMAP
            };

            var map = new google.maps.Map(document.getElementById("map"), mapAttr);

            var marker, iCnt;

            for (iCnt = 0; iCnt < info_cities.length; iCnt++) {
                marker = new google.maps.Marker({
                    position: new google.maps.LatLng(info_cities[iCnt][1], info_cities[iCnt][2]),
                    map: map,
                    animation: google.maps.Animation.DROP,
                    title: info_cities[iCnt][0]
                });
            }
        }

        google.maps.event.addDomListener(window, 'load', initialize);
    </script>
{% endblock %}

{% block body %}
    <div class="about">
        <div class="section_sapce section_primary cover-image2" data-image-src="{{ asset('assets/img/about.png') }}">
            <div class="section-title ">
                <h2>Áreas de Influencia</h2>
            </div>
        </div>
        <section class="testimonials section_gray section_sapce wow slideInDown">
            <div class="row">
                <div class="container">
                    <div class="section-title  margin-b50 margin-top-25">
                        <h2>Mapa</h2>
                    </div>
                    <div class="col-sm-12">
                        <div id="map" style="width:100%;height:450px;"></div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}