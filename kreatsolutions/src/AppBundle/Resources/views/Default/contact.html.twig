    </div>
</section>


    <!-- Support -->
    <div class="needsupport bg_dark-gray">
        <div class="row">
            <div class="container wow bounceInRight margin-top-45">
                <div class="col-sm-12">
                    <div class="section-title ">
                        <h2>Medios de contacto</h2>
                    </div>
                    <br>
                </div>
                <div class="col-lg-6">
                    <h3 class="text-center">Área comercial</h3>
                    <div class="col-xs-12 col-sm-6 col-lg-6">
                        <div class="offer offer-radius offer-primary">
                            <div class="shape">
                                <div class="shape-text">

                                </div>
                            </div>
                            <div class="offer-content">
