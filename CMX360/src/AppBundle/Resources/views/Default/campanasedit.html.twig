{% extends ('@App/layout.html.twig') %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/datatables.min.css') }}">
{% endblock %}

{% block javascript %}
    <script src="{{ asset('assets/js/campanasedit.js') }}"></script>
    <script src="{{ asset('assets/js/datatables.min.js') }}"></script>
{% endblock %}

{% block body %}
    <header class="section-header">
        <div class="tbl">
            <div class="tbl-row">
                <div class="tbl-cell">
                    <h2 class="inline-block">Actualización SendinBlue</h2>
                </div>
                <div class="tbl-cell text-right" >
                    <nav class="inline-block" aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ path('regCampanas') }}">SendinBlue</a></li>
                            <li class="breadcrumb-item active" aria-current="page" id="breadcrumb1">Actualización</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <hr>
    <div class="tabs-section">
        <div class="box-typical box-typical-padding">
            <div class="row">
                {{ form_start(edit_form) }}
                <div class="col-md-6">
                    <fieldset class="form-group">
                        <label class="form-label semibold" for="exampleInput">Número</label>
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.numero, {'attr': {'class': 'form-control', 'placeholder': 'Número de Campaña' } }) }}
                        </div>
                    </fieldset>
                    <fieldset class="form-group">
                        <label class="form-label semibold" for="exampleInput">Nombre</label>
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.nombre, {'attr': {'class': 'form-control', 'placeholder': 'Nombre de la Campaña' } }) }}
                        </div>
                    </fieldset>
                    <fieldset class="form-group">
                        <label class="form-label semibold" for="exampleInput">Asunto</label>
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.asunto, {'attr': {'class': 'form-control', 'placeholder': 'Asunto de la Campaña' } }) }}
                        </div>
                    </fieldset>
                    <fieldset class="form-group">
                        <label class="form-label semibold" for="exampleInput">Remitente</label>
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.nombreremitente, {'attr': {'class': 'form-control', 'placeholder': 'Remitente de la Campaña' } }) }}
                        </div>
                    </fieldset>
                </div>
                <div class="col-md-6">
                    <fieldset class="form-group">
                        <label class="form-label semibold" for="exampleInput">Correo de Remitente</label>
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.correoremitente, {'attr': {'class': 'form-control', 'placeholder': 'Correo de Remitente' } }) }}
                        </div>
                    </fieldset>
                    <fieldset class="form-group">
                        <label class="form-label semibold" for="exampleInput">Fecha de Envío</label>
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.fechaEnvio, {'attr': {'class': 'form-control', 'placeholder': 'Fecha de Envío de la Campaña' } }) }}
                        </div>
                    </fieldset>
                    <fieldset class="form-group">
                        <label class="form-label semibold" for="exampleInput">Tipo de la Campaña</label>
                        <div class="col-sm-10">
                            {{ form_widget(edit_form.tipoCampana, {'attr': {'class': 'form-control', 'placeholder': 'Tipo de la Campaña' } }) }}
                        </div>
                    </fieldset>
                </div>
                {{ form_widget(edit_form.actualizar, {'attr': {'class': 'btn btn-inline btn-primary mt-20'}}) }}
                {{ form_end(edit_form) }}
            </div>
            <hr>
            <div class="row">
                <div class="col-lg-12">
                    <table id="table-sm" class="table table-bordered table-hover table-sm" style="margin-bottom: 25px;">
                        <thead>
                        <tr>
                            <th width="1">Correo Electrónico Destinatario</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for c in correos %}
                            <tr>
                                <td>{{ c.correodestinatario }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}