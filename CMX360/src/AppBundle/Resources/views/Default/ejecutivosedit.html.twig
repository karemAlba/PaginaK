{% extends ('@App/layout.html.twig') %}

{% block javascript %}
    {#<script src="{{ asset('assets/js/random.js') }}" type="text/javascript"></script>#}
    <script>
        $("#generar").click(function () {
            $.ajax({
                type:'POST',
                url:'{{ path('genPassword') }}',
                success:function(html){
                    $("#core_bundle_ejecutivos_type_contrasena").attr('value',html);
                }
            });
        });

    </script>
{% endblock %}

{% block body %}

    <header class="section-header">
        <div class="tbl">
            <div class="tbl-row">
                <div class="tbl-cell">
                    <h2 class="inline-block">Actualización de Asesores </h2>

                </div>
                <div class="tbl-cell text-right">
                    <nav class="inline-block" aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ path('regEjecutivos') }}">Asesores</a></li>
                            <li class="breadcrumb-item active" >Actualización</li>


                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <hr>

    <div class="tabs-section">
        <div class="box-typical box-typical-padding">
            {{ form_start(edit_form) }}

            <fieldset class="form-group">
                <label class="form-label semibold" for="exampleInput">Nombre de asesor</label>
                <div class="col-sm-10">
                    <label for=""><strong>{{ ejec.nombre }} {{ ejec.apPaterno }} {{ ejec.apMaterno }}</strong></label>
                </div>
            </fieldset>
            <fieldset class="form-group">
                <label class="form-label semibold" for="exampleInput">Usuario</label>
                <div class="col-sm-10">
                    {{ form_widget(edit_form.nombre, {'attr': {'class': 'form-control', 'placeholder': 'Usuario' , 'readonly':'readonly' } }) }}

                </div>
            </fieldset>
            <fieldset class="form-group">
                <label class="form-label semibold" for="exampleInput">Contraseña</label>
                <div class="col-sm-5">
                    {{ form_widget(edit_form.contrasena|raw, {'attr': {'class': 'form-control', 'placeholder': 'Contraseña', 'readonly':'readonly' } }) }}
                </div>
                <div class="col-sm-3">
                    <a id="generar" class="btn btn-primary">Generar Contraseña</a>
                </div>
            </fieldset>
            <hr>
            <div class="form-check form-check-inline">
                <label class="col-sm-2 form-control-label">Activo</label>
                {{ form_widget(edit_form.activo, {'attr': {'class': 'form-control'}}) }}
            </div>
            <hr>
            <div class="row">
                <div class="col-lg-12">
                    {{ form_widget(edit_form.ingresar,{'attr': {'class': 'btn btn-primary default'}}) }}
                    <a class="btn btn-danger btn-cons m-t-10" href="{{ path('regEjecutivos') }}" role="button"> Cancelar</a>
                </div>
            </div>

            {{ form_end(edit_form) }}
        </div>
    </div>
{% endblock %}