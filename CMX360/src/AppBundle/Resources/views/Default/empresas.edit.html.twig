{% extends "@App/layout.html.twig" %}
{% block body %}
	<div class="box-typical box-typical-padding">
		<div class="box-typical-header">
				<h2>Editar empresa</h2>
		</div>
		<div class="box-typical-body">
			{{ form_start(form,{'method':'POST','action': path('empresas.edit',{'id':empresa.id})}) }}
			<div class="row">
				<div class="col-lg-7">
					<fieldset class="form-group">
						<label for="" class="form-label">Nombre de la empresa</label>
						{{ form_widget(form.nombre,{'attr':{ 'class':'form-control','placeholder':'Nombre de la empresa' } }) }}
					</fieldset>
				</div>
				<div class="col-lg-5">
					<fieldset class="form-group">
						<div class="btn-group m-t-2">
							<label class="btn">
								{{ form_widget(form.activo) }} Activo
							</label>
						</div>
					</fieldset>
				</div>

				<div class="col-lg-12">
					<fieldset class="form-group">
						<label class="form-label">Fecha de alta</label>
						{{  form_widget(form.fechaAlta,{'attr':{'class':'form-control','type':'date','placeholder':'Fecha de Alta'}}) }}
					</fieldset>
				</div>
			</div>
			<div class="form-group">
				<input type="submit" value="Guardar" class="btn btn-primary">
			</div>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}